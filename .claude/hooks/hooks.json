{
  "hooks": {
    "PreCompact": [
      {
        "matcher": "auto",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File \"$CLAUDE_PROJECT_DIR/.claude/scripts/pre-compact.ps1\" -WorkspaceRoot \"$CLAUDE_PROJECT_DIR\"",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File \"$CLAUDE_PROJECT_DIR/.claude/scripts/send-event.ps1\" -EventType \"context_compact\" -ToolName \"compact\" -WorkspaceRoot \"$CLAUDE_PROJECT_DIR\"",
            "timeout": 5
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File \"$CLAUDE_PROJECT_DIR/.claude/scripts/pre-subagent.ps1\" -WorkspaceRoot \"$CLAUDE_PROJECT_DIR\"",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File \"$CLAUDE_PROJECT_DIR/.claude/scripts/send-event.ps1\" -EventType \"subagent_start\" -ToolName \"Task\" -WorkspaceRoot \"$CLAUDE_PROJECT_DIR\"",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File \"$CLAUDE_PROJECT_DIR/.claude/scripts/post-subagent.ps1\" -WorkspaceRoot \"$CLAUDE_PROJECT_DIR\"",
            "timeout": 60
          },
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File \"$CLAUDE_PROJECT_DIR/.claude/scripts/estimate-tokens.ps1\" -WorkspaceRoot \"$CLAUDE_PROJECT_DIR\" -Operation \"subagent\"",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File \"$CLAUDE_PROJECT_DIR/.claude/scripts/send-event.ps1\" -EventType \"subagent_end\" -ToolName \"Task\" -WorkspaceRoot \"$CLAUDE_PROJECT_DIR\"",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File \"$CLAUDE_PROJECT_DIR/.claude/scripts/estimate-tokens.ps1\" -WorkspaceRoot \"$CLAUDE_PROJECT_DIR\" -Operation \"write\"",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File \"$CLAUDE_PROJECT_DIR/.claude/scripts/send-event.ps1\" -EventType \"file_write\" -ToolName \"Write\" -WorkspaceRoot \"$CLAUDE_PROJECT_DIR\"",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File \"$CLAUDE_PROJECT_DIR/.claude/scripts/estimate-tokens.ps1\" -WorkspaceRoot \"$CLAUDE_PROJECT_DIR\" -Operation \"edit\"",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File \"$CLAUDE_PROJECT_DIR/.claude/scripts/send-event.ps1\" -EventType \"file_edit\" -ToolName \"Edit\" -WorkspaceRoot \"$CLAUDE_PROJECT_DIR\"",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File \"$CLAUDE_PROJECT_DIR/.claude/scripts/estimate-tokens.ps1\" -WorkspaceRoot \"$CLAUDE_PROJECT_DIR\" -Operation \"read\"",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File \"$CLAUDE_PROJECT_DIR/.claude/scripts/send-event.ps1\" -EventType \"file_read\" -ToolName \"Read\" -WorkspaceRoot \"$CLAUDE_PROJECT_DIR\"",
            "timeout": 5
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File \"$CLAUDE_PROJECT_DIR/.claude/scripts/session-start.ps1\" -WorkspaceRoot \"$CLAUDE_PROJECT_DIR\"",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File \"$CLAUDE_PROJECT_DIR/.claude/scripts/send-event.ps1\" -EventType \"session_start\" -ToolName \"session\" -WorkspaceRoot \"$CLAUDE_PROJECT_DIR\"",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File \"$CLAUDE_PROJECT_DIR/.claude/scripts/session-end.ps1\" -WorkspaceRoot \"$CLAUDE_PROJECT_DIR\"",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File \"$CLAUDE_PROJECT_DIR/.claude/scripts/send-event.ps1\" -EventType \"session_end\" -ToolName \"session\" -WorkspaceRoot \"$CLAUDE_PROJECT_DIR\"",
            "timeout": 5
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File \"$CLAUDE_PROJECT_DIR/.claude/scripts/post-subagent.ps1\" -WorkspaceRoot \"$CLAUDE_PROJECT_DIR\"",
            "timeout": 60
          },
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File \"$CLAUDE_PROJECT_DIR/.claude/scripts/send-event.ps1\" -EventType \"subagent_complete\" -ToolName \"SubagentStop\" -WorkspaceRoot \"$CLAUDE_PROJECT_DIR\"",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
