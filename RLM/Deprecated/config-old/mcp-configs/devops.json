{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "./"],
      "description": "File operations for config files"
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "description": "GitHub actions and workflows"
    }
  },
  "description": "DevOps agent configuration - filesystem + GitHub for CI/CD",
  "tokenOverhead": "~4000 tokens",
  "useCase": "CI/CD setup, deployment configuration, GitHub Actions"
}

