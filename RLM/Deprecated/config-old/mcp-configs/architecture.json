{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "./"],
      "description": "File operations"
    },
    "fetch": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-fetch"],
      "description": "Web scraping for tech research"
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "description": "GitHub API access for reviewing similar projects"
    }
  },
  "description": "Architecture agent configuration - filesystem + web research + GitHub",
  "tokenOverhead": "~8000 tokens",
  "useCase": "Architecture design, technology research, reviewing existing implementations"
}

