{
  "$schema": "https://design-tokens-format-module.github.io/dtcg/spec/0.1.0/schema.json",
  "color": {
    "darkroom": {
      "midnight": {
        "$type": "color",
        "$value": "#0A0A0A",
        "$description": "Primary background - deep black"
      },
      "charcoal": {
        "$type": "color",
        "$value": "#1C1C1E",
        "$description": "Elevated surfaces (cards, modals)"
      },
      "ash": {
        "$type": "color",
        "$value": "#2C2C2E",
        "$description": "Borders, dividers, subtle separators"
      },
      "smoke": {
        "$type": "color",
        "$value": "#48484A",
        "$description": "Disabled states, inactive elements"
      },
      "fog": {
        "$type": "color",
        "$value": "#8E8E93",
        "$description": "Secondary text, metadata, timestamps"
      },
      "silver": {
        "$type": "color",
        "$value": "#C7C7CC",
        "$description": "Primary text on dark backgrounds"
      },
      "paper": {
        "$type": "color",
        "$value": "#F2F2F7",
        "$description": "Light mode background - archival paper"
      }
    },
    "accent": {
      "amber": {
        "$type": "color",
        "$value": "#FF9F0A",
        "$description": "Warnings, highlights, save buttons"
      },
      "crimson": {
        "$type": "color",
        "$value": "#FF453A",
        "$description": "Errors, urgent CTAs, delete actions"
      },
      "electric": {
        "$type": "color",
        "$value": "#FFD60A",
        "$description": "Success, achievements, completed challenges"
      },
      "cyan": {
        "$type": "color",
        "$value": "#64D2FF",
        "$description": "Links, informational elements"
      }
    },
    "mentor": {
      "hcb-blue": {
        "$type": "color",
        "$value": "#3A5A7F",
        "$description": "Henri Cartier-Bresson signature color"
      },
      "maier-violet": {
        "$type": "color",
        "$value": "#6B4E71",
        "$description": "Vivian Maier signature color"
      },
      "winogrand-amber": {
        "$type": "color",
        "$value": "#8B5A3C",
        "$description": "Garry Winogrand signature color"
      },
      "arbus-crimson": {
        "$type": "color",
        "$value": "#8B2635",
        "$description": "Diane Arbus signature color"
      },
      "erwitt-sage": {
        "$type": "color",
        "$value": "#5A7D5F",
        "$description": "Elliott Erwitt signature color"
      }
    },
    "light": {
      "noon-white": {
        "$type": "color",
        "$value": "#FAFAFA",
        "$description": "Light mode primary background"
      },
      "graphite": {
        "$type": "color",
        "$value": "#1C1C1E",
        "$description": "Light mode primary text"
      },
      "ash-light": {
        "$type": "color",
        "$value": "#E5E5EA",
        "$description": "Light mode borders and surfaces"
      }
    }
  },
  "typography": {
    "fontFamily": {
      "display": {
        "$type": "fontFamily",
        "$value": ["Druk Wide", "Impact", "Arial Black", "sans-serif"],
        "$description": "Bold headlines, brutalist aesthetic"
      },
      "mono": {
        "$type": "fontFamily",
        "$value": ["Courier Prime", "Courier New", "Courier", "monospace"],
        "$description": "Quotes, typewriter aesthetic"
      },
      "body": {
        "$type": "fontFamily",
        "$value": ["Inter", "system-ui", "-apple-system", "Segoe UI", "sans-serif"],
        "$description": "Body text, readable UI"
      }
    },
    "fontSize": {
      "xs": {
        "$type": "dimension",
        "$value": "0.75rem",
        "$description": "12px - Metadata, timestamps"
      },
      "sm": {
        "$type": "dimension",
        "$value": "0.875rem",
        "$description": "14px - Secondary text"
      },
      "base": {
        "$type": "dimension",
        "$value": "1.125rem",
        "$description": "18px - Body text (mobile-optimized)"
      },
      "lg": {
        "$type": "dimension",
        "$value": "1.25rem",
        "$description": "20px - Subheadings"
      },
      "xl": {
        "$type": "dimension",
        "$value": "1.5rem",
        "$description": "24px - Small headlines"
      },
      "2xl": {
        "$type": "dimension",
        "$value": "2rem",
        "$description": "32px - Section headlines"
      },
      "3xl": {
        "$type": "dimension",
        "$value": "3rem",
        "$description": "48px - Page headlines"
      },
      "4xl": {
        "$type": "dimension",
        "$value": "4rem",
        "$description": "64px - Hero headlines (landing only)"
      }
    },
    "lineHeight": {
      "tight": {
        "$type": "number",
        "$value": "1.1",
        "$description": "Headlines"
      },
      "normal": {
        "$type": "number",
        "$value": "1.5",
        "$description": "Body text"
      },
      "relaxed": {
        "$type": "number",
        "$value": "1.75",
        "$description": "Longer paragraphs"
      }
    },
    "fontWeight": {
      "regular": {
        "$type": "fontWeight",
        "$value": "400"
      },
      "medium": {
        "$type": "fontWeight",
        "$value": "500"
      },
      "bold": {
        "$type": "fontWeight",
        "$value": "700"
      }
    },
    "letterSpacing": {
      "tight": {
        "$type": "dimension",
        "$value": "-0.02em",
        "$description": "Headlines"
      },
      "normal": {
        "$type": "dimension",
        "$value": "0em"
      },
      "wide": {
        "$type": "dimension",
        "$value": "0.05em",
        "$description": "All caps text"
      }
    }
  },
  "spacing": {
    "1": {
      "$type": "dimension",
      "$value": "0.25rem",
      "$description": "4px"
    },
    "2": {
      "$type": "dimension",
      "$value": "0.5rem",
      "$description": "8px"
    },
    "3": {
      "$type": "dimension",
      "$value": "0.75rem",
      "$description": "12px"
    },
    "4": {
      "$type": "dimension",
      "$value": "1rem",
      "$description": "16px - Base unit"
    },
    "6": {
      "$type": "dimension",
      "$value": "1.5rem",
      "$description": "24px"
    },
    "8": {
      "$type": "dimension",
      "$value": "2rem",
      "$description": "32px"
    },
    "12": {
      "$type": "dimension",
      "$value": "3rem",
      "$description": "48px"
    },
    "16": {
      "$type": "dimension",
      "$value": "4rem",
      "$description": "64px"
    },
    "24": {
      "$type": "dimension",
      "$value": "6rem",
      "$description": "96px"
    }
  },
  "borderRadius": {
    "none": {
      "$type": "dimension",
      "$value": "0px",
      "$description": "Brutalist square corners"
    },
    "sm": {
      "$type": "dimension",
      "$value": "0.125rem",
      "$description": "2px - Minimal rounding"
    },
    "md": {
      "$type": "dimension",
      "$value": "0.25rem",
      "$description": "4px - Subtle rounding"
    },
    "full": {
      "$type": "dimension",
      "$value": "9999px",
      "$description": "Circular (avatars, pills)"
    }
  },
  "borderWidth": {
    "default": {
      "$type": "dimension",
      "$value": "1px"
    },
    "thick": {
      "$type": "dimension",
      "$value": "2px",
      "$description": "Brutalist borders"
    },
    "thicker": {
      "$type": "dimension",
      "$value": "4px",
      "$description": "Emphasis borders"
    }
  },
  "shadow": {
    "brutal-sm": {
      "$type": "shadow",
      "$value": {
        "offsetX": "2px",
        "offsetY": "2px",
        "blur": "0px",
        "spread": "0px",
        "color": "#0A0A0A"
      },
      "$description": "Small brutalist shadow"
    },
    "brutal-md": {
      "$type": "shadow",
      "$value": {
        "offsetX": "4px",
        "offsetY": "4px",
        "blur": "0px",
        "spread": "0px",
        "color": "#0A0A0A"
      },
      "$description": "Medium brutalist shadow"
    },
    "brutal-lg": {
      "$type": "shadow",
      "$value": {
        "offsetX": "8px",
        "offsetY": "8px",
        "blur": "0px",
        "spread": "0px",
        "color": "#0A0A0A"
      },
      "$description": "Large brutalist shadow"
    },
    "brutal-amber": {
      "$type": "shadow",
      "$value": {
        "offsetX": "4px",
        "offsetY": "4px",
        "blur": "0px",
        "spread": "0px",
        "color": "#FF9F0A"
      },
      "$description": "Accent brutalist shadow"
    }
  },
  "animation": {
    "duration": {
      "fast": {
        "$type": "duration",
        "$value": "150ms",
        "$description": "Micro-interactions (hover, focus)"
      },
      "normal": {
        "$type": "duration",
        "$value": "300ms",
        "$description": "UI transitions (modal, drawer)"
      },
      "slow": {
        "$type": "duration",
        "$value": "600ms",
        "$description": "Scroll animations, page transitions"
      }
    },
    "easing": {
      "linear": {
        "$type": "cubicBezier",
        "$value": [0, 0, 1, 1]
      },
      "ease": {
        "$type": "cubicBezier",
        "$value": [0.25, 0.1, 0.25, 1]
      },
      "ease-in-out": {
        "$type": "cubicBezier",
        "$value": [0.4, 0, 0.2, 1]
      },
      "bounce": {
        "$type": "cubicBezier",
        "$value": [0.68, -0.55, 0.265, 1.55]
      }
    }
  },
  "breakpoint": {
    "sm": {
      "$type": "dimension",
      "$value": "640px",
      "$description": "Small tablets (portrait)"
    },
    "md": {
      "$type": "dimension",
      "$value": "768px",
      "$description": "Tablets (landscape), small laptops"
    },
    "lg": {
      "$type": "dimension",
      "$value": "1024px",
      "$description": "Desktops, large tablets"
    },
    "xl": {
      "$type": "dimension",
      "$value": "1280px",
      "$description": "Large desktops"
    }
  }
}
